{
    "name": "Alk",
    "displayName": "Alk Visual Studio Code Extension",
    "description": "",
    "publisher": "AlkUaic",
    "version": "0.10.0",
    "engines": {
        "vscode": "^1.62.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Andreizabo/alk-vscode-extension.git"
    },
    "homepage": "https://github.com/Andreizabo/alk-vscode-extension/blob/main/README.md",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "workspaceContains:/**/*.alk",
        "onLanguage:alk"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "alk.run",
                "title": "Run Alk",
                "category": "Alk",
                "icon": "$(play)"
            },
            {
                "command": "alk.runExhaustive",
                "title": "Run Alk Exhaustive",
                "category": "Alk",
                "icon": "$(debug-alt)"
            },
            {
                "command": "alk.stop",
                "title": "Stop Alk",
                "category": "Alk",
                "icon": "$(stop)"
            }
        ],
        "configuration": {
            "title": "Alk",
            "properties": {
                "alk.precision": {
                    "type": [
                        "number",
                        "null"
                    ],
                    "description": "The precision to be used when running an algorithm.",
                    "default": null
                },
                "alk.metadata": {
                    "type": "boolean",
                    "description": "Whether to show metadata (the final configuration) in the output.",
                    "default": true
                },
                "alk.showCommand": {
                    "type": "boolean",
                    "description": "Whether to show the command used to run the algorithm in the output.",
                    "default": true
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "type": "webview",
                    "id": "alk.optionsView",
                    "name": "Alk Options"
                }
            ]
        },
        "languages": [
            {
                "id": "alk",
                "aliases": [
                    "alk"
                ],
                "extensions": [
                    "alk",
                    ""
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alk",
                "scopeName": "source.alk",
                "path": "./syntaxes/alk.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "alk",
                "path": "./snippets.json"
            }
        ],
        "submenus": [
            {
                "id": "alk.menu",
                "label": "Alk"
            }
        ],
        "menus": {
            "alk.menu": [
                {
                    "when": "resourceLangId == alk && alk.canRun",
                    "command": "alk.run",
                    "group": "z_commands"
                },
                {
                    "when": "resourceLangId == alk && alk.canRun",
                    "command": "alk.runExhaustive",
                    "group": "z_commands"
                },
                {
                    "when": "resourceLangId == alk && !alk.canRun",
                    "command": "alk.stop",
                    "group": "z_commands"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceLangId == alk",
                    "submenu": "alk.menu",
                    "group": "z_commands"
                }
            ],
            "editor/title/run": [
                {
                    "when": "resourceLangId == alk && alk.canRun",
                    "command": "alk.run",
                    "group": "z_commands"
                },
                {
                    "when": "resourceLangId == alk && alk.canRun",
                    "command": "alk.runExhaustive",
                    "group": "z_commands"
                },
                {
                    "when": "resourceLangId == alk && !alk.canRun",
                    "command": "alk.stop",
                    "group": "z_commands"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.62.0",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^7.32.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.1",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "del": "^6.0.0",
        "download": "^8.0.0",
        "mv": "^2.1.1",
        "tree-kill": "^1.2.2",
        "unzipper": "^0.10.11",
        "vsce": "^2.6.3"
    }
}
